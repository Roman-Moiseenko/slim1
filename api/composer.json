{
  "name": "slim_education/auction",
  "description": "First Project",
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Roman-Moiseenko",
      "email": "r.a.moiseenko@gmail.com"
    }
  ],
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "doctrine/orm": "*",
    "php-di/php-di": "^6.3.0",
    "ramsey/uuid": "^4.2.3",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.9",
    "symfony/cache": "^6.0",
    "symfony/console": "^v6.0.0",
    "webmozart/assert": "1.10.0",
    "laminas/laminas-config-aggregator": "^1.7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "api-test": "vendor/bin/phpunit --colors=always",
    "test-coverage": "vendor/bin/phpunit --colors=always --coverage-html var/coverage"
  }
}
